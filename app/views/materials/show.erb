<div class='pure-u-1-5'></div>
<div class='pure-u-3-5'>
  <div class='pure-g'>
    <div class='pure-u-1-5'>
      <%= render "listing", material: @material %>
    </div>
    <div class='pure-u-4-5'>
      <div class='pure-g'>
        <div class='pure-u-2-3 right breathe-child'>
          <div class="breathe">
            <%= "biblio record:" %>
          </div>
          <div>
            <%= "material type:" %>
          </div>
          <div>
            <%= "number copies:" %>
          </div>
          <div>
            <%= "current holds:" %>
          </div>
        </div>

        <div class='pure-u-1-3 left breathe-child' >
          <div>
            <%= "#{@material.bib_record}" %>
          </div>
          <div>
            <%= "#{@material.material_code}" %>
          </div>
          <div>
            <%= "#{@material.copies}" %>
          </div>
          <div>
            <%= "#{@material.number_of_open_holds}" %>
          </div>
        </div>
      </div>
    </div>
    <div class="pure-g">
      <div class='pure-u-1' id='users'><%= @users %></div>
      <script>
        users = JSON.parse(document.getElementById("users").innerText)
        document.getElementById("users").innerText = JSON.stringify(_.sortBy(users, function(user){
          return -user.number_of_holds
        }))
      </script>
    </div>
  </div>
</div>
<div class='pure-u-1-5'></div>
